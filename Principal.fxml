<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Principal">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <SplitPane orientation="VERTICAL" prefHeight="300.0" prefWidth="500.0">
         <items>
            <AnchorPane focusTraversable="true" prefHeight="6.0" prefWidth="498.0">
               <children>
                  <Label layoutX="130.0" layoutY="30.0" prefHeight="35.0" prefWidth="243.0" text="Convertir Numero a Palabras" textAlignment="CENTER" textFill="#040014" textOverrun="LEADING_ELLIPSIS" wrapText="true">
                     <font>
                        <Font name="Rockwell Extra Bold" size="18.0" />
                     </font>
                     <effect>
                        <ColorAdjust />
                     </effect>
                  </Label>
                  <Label layoutX="192.0" layoutY="89.0" text="Introduzca el numero" />
                  <TextField fx:id="numero" layoutX="177.0" layoutY="124.0" />
                  <Button fx:id="btn_conv" layoutX="140.0" layoutY="188.0" mnemonicParsing="false" onAction="#enviar" text="Convertir" />
                  <Button fx:id="btn_limpiar" layoutX="280.0" layoutY="188.0" mnemonicParsing="false" onAction="#limpiar" text="Limpiar" />
               </children>
            </AnchorPane>
         </items>
      </SplitPane>
   </children>
</GridPane>
